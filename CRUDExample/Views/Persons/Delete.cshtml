@model PersonResponse
@{
 ViewBag.Title = "Delete Person";
}

<a form asp-controller="Persons" asp-action="index" class="link-hover">Back to Persons List</a>
<h2>Delete Person</h2>
<h3>Are you sure to delete the person ? </h3>

<div class="w-50">
 <form asp-controller="Persons" asp-action="Delete"  method="post" >
     <input type="hidden" asp-for="PersonID" />
  @*PersonName*@
  <div class="form-field flex">
   <div class="w-25">
                <label asp-for="PersonName" class="form-label pt" >Person Name</label>
   </div>
   <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled="disabled"/>@*type="text" id="PersonName" name="PersonName"*@
                <span asp-validation-for="PersonName" class="text-red"></span>
   </div>
  </div>
  @*Email*@
  <div class="form-field flex">
   <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
   </div>
   <div class="flex-1">
                <input asp-for="Email" type="email" class="form-input" disabled="disabled"/> @*type="email" id="Email" name="Email"*@
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
  </div>
  @*Submit*@
  <div class="form-field flex">
   <div class="w-25">
   </div>
   <div class="flex-1">
    <button class="button button-red-back">Delete</button>
    <div asp-validation-summary="All" class="text-red"></div>@*to display all the validation*@
    @if (ViewBag.Errors != null)
    {
     <div class="text-red ml">
      <ul>
       @foreach (string error in ViewBag.Errors)
       {
        <li class="ml">@error</li>
       }
      </ul>
     </div>
    }
   </div>
  </div>

 </form>
</div>
